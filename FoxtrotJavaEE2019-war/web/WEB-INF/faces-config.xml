<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>de</supported-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
        <resource-bundle>
            <!--
            specifying the resource-bundle in this config file enables
            code completion in NetBeans xhtml editor,
            whereas f:loadbundle does not
            -->
            <base-name>foxtrot.jee19.i18n.Messages</base-name>
            <var>msg</var>
        </resource-bundle>
    </application>
    <navigation-rule>
        <from-view-id>/public_access/courselist.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>createcourse</from-outcome>
            <to-view-id>/logged_in/createcourse.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/public_access/courselist.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>coursedetails</from-outcome>
            <to-view-id>/logged_in/coursedetails.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>createcourse</from-outcome>
            <to-view-id>/logged_in/createcourse.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/logged_in/createPoll.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>pollCreatedSuccessfully</from-outcome>
            <to-view-id>/logged_in/pollCreationResult.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/logged_in/pollList.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>pollStarted</from-outcome>
            <to-view-id>/logged_in/pollStartResult.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/public_access/index.xhtml?faces-redirect=true</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>publishedPolls</from-outcome>
            <to-view-id>/public_access/publishedResultsList.xhtml?faces-redirect=true</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>myaccount</from-outcome>
            <to-view-id>/logged_in/myaccount.xhtml?faces-redirect=true</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>courselist</from-outcome>
            <to-view-id>/public_access/courselist.xhtml?faces-redirect=true</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>administration</from-outcome>
            <to-view-id>/admin/administration.xhtml?faces-redirect=true</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>createPollPage</from-outcome>
            <to-view-id>/logged_in/createPoll.xhtml?faces-redirect=true</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/login.xhtml?faces-redirect=true</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>checkTokenPage</from-outcome>
            <to-view-id>/logged_in/checkToken.xhtml?faces-redirect=true</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>resultList</from-outcome>
            <to-view-id>/logged_in/pollResultList.xhtml?faces-redirect=true</to-view-id>
        </navigation-case> 
        <navigation-case>
            <from-outcome>pollList</from-outcome>
            <to-view-id>/logged_in/pollList.xhtml?faces-redirect=true</to-view-id>
        </navigation-case> 
        <navigation-case>
            <from-outcome>extendPollList</from-outcome>
            <to-view-id>/logged_in/pollExtendingList.xhtml?faces-redirect=true</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>removePollList</from-outcome>
            <to-view-id>/admin/removePollList.xhtml?faces-redirect=true</to-view-id>
        </navigation-case>    
        <navigation-case>
            <from-outcome>pollReviewList</from-outcome>
            <to-view-id>/logged_in/pollReviewList.xhtml?faces-redirect=true</to-view-id>
        </navigation-case> 
        <navigation-case>
            <from-outcome>participationTrackList</from-outcome>
            <to-view-id>/logged_in/participationTrackList.xhtml?faces-redirect=true</to-view-id>
        </navigation-case>    
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/logged_in/checkToken.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>confirmed</from-outcome>
            <to-view-id>/logged_in/voting.xhtml?faces-redirect=true</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>failed</from-outcome>
            <to-view-id>/logged_in/tokenError.xhtml?faces-redirect=true</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/logged_in/pollResultList.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>showResult</from-outcome>
            <to-view-id>/logged_in/voteResult.xhtml?faces-redirect=true</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/logged_in/pollList.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>showPoll</from-outcome>
            <to-view-id>/logged_in/changePoll.xhtml?faces-redirect=true</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/logged_in/voting.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>voteSumbitSuccess</from-outcome>
            <to-view-id>/logged_in/voteSubmitResult.xhtml?faces-redirect=true</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/logged_in/changePoll.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>pollEditedSuccessfully</from-outcome>
            <to-view-id>/logged_in/changePollResult.xhtml?faces-redirect=true</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/logged_in/pollExtendingList.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>seePoll</from-outcome>
            <to-view-id>/logged_in/extendPoll.xhtml?faces-redirect=true</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/logged_in/extendPoll.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>pollExtendedSuccessfully</from-outcome>
            <to-view-id>/logged_in/extendPollResult.xhtml?faces-redirect=true</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
    <from-view-id>/admin/removePollList.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>pollRemoveSuccess</from-outcome>
            <to-view-id>/admin/removePollResult.xhtml?faces-redirect=true</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
    <from-view-id>/logged_in/pollReviewList.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>reviewVote</from-outcome>
            <to-view-id>/logged_in/reviewVote.xhtml?faces-redirect=true</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/public_access/publishedResultsList.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>showResult</from-outcome>
            <to-view-id>/public_access/publishedVoteResult.xhtml?faces-redirect=true</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/logged_in/participationTrackList.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>showResult</from-outcome>
            <to-view-id>/logged_in/participationTracking.xhtml?faces-redirect=true</to-view-id>
        </navigation-case>
    </navigation-rule>

</faces-config>
